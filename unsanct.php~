{
    	$okey=$_GET["okey"];
    	$class=$_GET["cls"];
    	$pmkeys=explode(",",$okey);
	$upmkeys=array_unique($pmkeys);
	$npmks=count($upmkeys);
	for($i=0;$i<$npmks;$i++)
	{
		if($upmkeys[$i]!="")
		{
			$kkey=$upmkeys[$i];
		    	$o=mysql_query("select id,odate from outing where okey='$kkey';")or die(mysql_error());
			$ot=mysql_fetch_array($o);
			mysql_query("update outing set status='sanction' where okey='$kkey'; ")or die(mysql_error());
			$email=strtolower($ot['id']).'@nuz.rgukt.in';
			$to= $email;
			$subject = 'the subject';
			$message = 'Dear User,'."\n\t\t"."Your outing at ".$ot['odate']."is sanctioned go and get your outpass";
			$headers = 'From:'.$id;

			if(mail($to, $subject, $message, $headers))
			{
				echo "Outing is sanctioned successfully  and a mail send to student";
		    	}
			else 
			{
				echo "Outing is sanctioned but mail not sent";
			}
		}
	}	
echo <<<ss
